<Project>
	<Import Sdk="Microsoft.Maui.Sdk.net7" Project="Microsoft.Maui.Controls.SingleProject.targets" />

	<ItemGroup>
		<!-- Deemed "safe enough" for now -->
		<TrimmableAssembly Include="Microsoft.AspNetCore.Components.WebView" />
		<TrimmableAssembly Include="Microsoft.Extensions.FileProviders.Abstractions" />
		<TrimmableAssembly Include="Microsoft.Extensions.FileProviders.Embedded" />
		<TrimmableAssembly Include="Microsoft.Extensions.Primitives" />
	</ItemGroup>

	<ItemGroup Condition=" '$(SpiceEnablePlatformUsings)' != 'true' and ('$(ImplicitUsings)' == 'true' or '$(ImplicitUsings)' == 'enable') ">
		<Using Remove="@(Using->HasMetadata('Platform'))" />
	</ItemGroup>

	<!-- Microsoft.NET.Sdk.Razor signals to import this -->
	<Import Condition=" '$(UsingMicrosoftNETSdkRazor)' == 'true' " Project="Spice.Blazor.targets" />
</Project>